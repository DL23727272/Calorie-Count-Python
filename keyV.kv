MainScreen:
    MDScreen:

        MDBottomNavigation:
            #panel_color: "#eeeaea"
            selected_color_background: "orange"
            text_color_active: "lightgrey"

            MDBottomNavigationItem:
                name: 'screen 1'
                text: 'Add'
                icon: 'plus-thick'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: "300dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDTextField:
                        id: food_name
                        hint_text: "Food Name"
                        helper_text: "Enter the name of the food"
                        helper_text_mode: "on_focus"
                        size_hint_x: None
                        width: 200
                        pos_hint: {'center_x': 0.5, 'center_y': 0.9}


                    MDTextField:
                        id: calorie
                        hint_text: "Calorie"
                        input_filter: "int"
                        helper_text: "Enter the calorie count"
                        helper_text_mode: "on_focus"
                        size_hint_x: None
                        width: 200
                        pos_hint: {'center_x': 0.5, 'center_y': 0.9}

                    MDRectangleFlatButton:
                        text: "Add Food"
                        on_release: root.add_food()
                        size_hint_x: None
                        width: 200
                        pos_hint: {'center_x': 0.5}

                    MDLabel:
                        id: status
                        text: ""
                        halign: "center"
                        size_hint_y: None
                        height: "48dp"

                    MDLabel:
                        id: total_calories
                        text: "Total Calories: 0"
                        halign: "center"
                        size_hint_y: None
                        height: "48dp"

            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Food List'
                icon: 'food'

                ScrollView:
                    MDLabel:
                        id: food_list
                        text: ''
                        halign: 'center'
                        markup: True

            MDBottomNavigationItem:
                name: 'screen 3'
                text: 'info'
                icon: 'information'

                MDLabel:
                    text: 'About the Developers'
                    halign: "center"
                    pos_hint: {"center_x": .5, "center_y": .7}
                    bold: True
                    
                MDLabel:
                    text: 'Mhariz Delarosa Adona'
                    halign: 'center'
                    pos_hint: {"center_x": .5, "center_y": .6}
                MDLabel:
                    text: 'Jasmine Joy A. Ferrer'
                    halign: 'center'
                    pos_hint: {"center_x": .5, "center_y": .5}
                MDLabel:
                    text: 'Contact Information: 09666835695'
                    halign: 'center'
                    pos_hint: {"center_x": .5, "center_y": .4}

            MDBottomNavigationItem:
                name: 'screen 4'
                text: 'System Info'
                icon: 'application'

                MDLabel:
                    text: 'System Info'
                    halign: 'center'
                    halign: "center"
                    pos_hint: {"center_x": .5, "center_y": .7}
                    bold: True
                MDLabel:
                    text: " MyFitnessPal is a comprehensive health and fitness app designed to help users track their diet, exercise, and overall wellness goals. With a vast database of foods, customizable workout plans, and intuitive user interface, it's easier than ever to make healthy choices and achieve your fitness objectives."
                    halign: 'center'
                    pos_hint: {"center_x": .5, "center_y": .5}

            MDBottomNavigationItem:
                name: 'screen 5'
                text: 'System Help'
                icon: 'application-braces-outline'

                MDLabel:
                    text: 'System Help'
                    halign: 'center'
                    halign: "center"
                    pos_hint: {"center_x": .5, "center_y": .7}
                    bold: True
                MDLabel:
                    text: "Type of Help Needed: Technical Support Description of Issue or Question: I'm experiencing difficulty syncing my data between devices."
                    halign: 'center'
                    pos_hint: {"center_x": .5, "center_y": .6}  
                MDLabel:
                    text: 'Contact Information: myfitnesspal@gmail.com'
                    halign: 'center'
                    pos_hint: {"center_x": .5, "center_y": .4}              

            